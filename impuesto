#include "stdafx.h"
#include "conio.h"
#include <iostream>
using namespace std;

int main()
{
		float sueldo, base, impuesto;
        cout<<"ingrese el monto de su sueldo :";
		cin>> sueldo;
		cout<<"ingrese el sueldo base:";
		cin>> base;
		if(sueldo>2*base)
		{
        impuesto*sueldo*0.13;
		}
		else
		{
       impuesto=0;
		}
		cout<< "el impuesto a pagar es: "<<impuesto;
		getch(); 
	return 0;
}

